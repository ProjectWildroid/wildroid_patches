Subject: [PATCH 1/2] gptfdisk: Build lib for recovery

Change-Id: Ie4b37f7b628b04fa3d2224e1c99b7b08aef5cabe
---
 Android.bp | 18 ++++++++++++++++++
 1 file changed, 18 insertions(+)

diff --git a/Android.bp b/Android.bp
index c1894e9..3facc3e 100644
--- a/Android.bp
+++ b/Android.bp
@@ -85,6 +85,7 @@ cc_library_static {
     name: "libgptf",
     defaults: ["gptfdisk_default_flags"],
     host_supported: true,
+    recovery_available: true,
 
     export_include_dirs: ["."],
     srcs: lib_common_srcs + ["diskio-unix.cc"],
@@ -103,3 +104,20 @@ cc_library_static {
 
     shared_libs: ["libext2_uuid"],
 }
+
+cc_library {
+    name: "libsgdisk",
+    recovery_available: true,
+
+    defaults: ["gptfdisk_default_flags"],
+
+    srcs: [
+        "sgdisk.cc",
+    ],
+    cflags: [
+        "-Dmain=sgdisk_main",
+    ],
+
+    shared_libs: ["libext2_uuid"],
+    static_libs: ["libgptf"],
+}
